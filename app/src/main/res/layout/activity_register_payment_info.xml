<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csm117.digitalbazaar.RegisterPaymentInfo">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/simpleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Payment Info" />

        <EditText
            android:id="@+id/creditcardNumberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Credit Card Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/expirationMonthEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Expiration month"
            android:inputType="number" />

        <EditText
            android:id="@+id/expirationYearEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Expiration year"
            android:inputType="number" />

        <EditText
            android:id="@+id/ccvEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CCV"
            android:inputType="number" />

        <EditText
            android:id="@+id/nameOnCardEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name on card"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/testSaveButton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:onClick="savePaymentInfo"
            android:text="Save" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
